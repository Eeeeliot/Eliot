<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvOutput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:padding="10dp"
                android:textSize="@dimen/output_font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/grid_margin"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnSin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/grid_margin"
                android:layout_weight="1"
                android:text="@string/btn_sin"
                android:textSize="@dimen/button_font_size1" />

            <Button
                android:id="@+id/btnCos"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/grid_margin"
                android:layout_weight="1"
                android:text="@string/btn_cos"
                android:textSize="@dimen/button_font_size1" />

            <Button
                android:id="@+id/btnTan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/grid_margin"
                android:layout_weight="1"
                android:text="@string/btn_tan"
                android:textSize="@dimen/button_font_size1" />

            <Button
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/grid_margin"
                android:layout_weight="1"
                android:text="@string/btn_clear"
                android:textSize="@dimen/button_font_size" />

            <Button
                android:id="@+id/btnBack"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/grid_margin"
                android:layout_marginRight="@dimen/grid_margin"
                android:layout_weight="1"
                android:text="@string/btn_backspace"
                android:textSize="@dimen/button_font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight="1">

            <Button
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/grid_margin"
                android:layout_weight="1"
                android:text="7"
                android:textSize="@dimen/button_font_size" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/grid_margin"
                android:layout_weight="1"
                android:text="8"
                android:textSize="@dimen/button_font_size" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/grid_margin"
                android:layout_weight="1"
                android:text="9"
                android:textSize="@dimen/button_font_size" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/grid_margin"
                android:layout_marginRight="@dimen/grid_margin"
                android:layout_weight="1"
                android:text="+"
                android:textSize="@dimen/button_font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/grid_margin"
                android:layout_weight="1"
                android:text="4"
                android:textSize="@dimen/button_font_size" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/grid_margin"
                android:layout_weight="1"
                android:text="5"
                android:textSize="@dimen/button_font_size" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/grid_margin"
                android:layout_weight="1"
                android:text="6"
                android:textSize="@dimen/button_font_size" />

            <Button
                android:id="@+id/btnSub"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/grid_margin"
                android:layout_marginRight="@dimen/grid_margin"
                android:layout_weight="1"
                android:text="-"
                android:textSize="@dimen/button_font_size" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight="1">

            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/grid_margin"
                android:layout_weight="1"
                android:text="1"
                android:textSize="@dimen/button_font_size" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/grid_margin"
                android:layout_weight="1"
                android:text="2"
                android:textSize="@dimen/button_font_size" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/grid_margin"
                android:layout_weight="1"
                android:text="3"
                android:textSize="@dimen/button_font_size" />

            <Button
                android:id="@+id/btnMul"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/grid_margin"
                android:layout_marginRight="@dimen/grid_margin"
                android:layout_weight="1"
                android:text="*"
                android:textSize="@dimen/button_font_size" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight="1">

            <Button
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/grid_margin"
                android:layout_weight="1"
                android:text="0"
                android:textSize="@dimen/button_font_size" />

            <Button
                android:id="@+id/btnDot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/grid_margin"
                android:layout_weight="1"
                android:text="."
                android:textSize="@dimen/button_font_size" />

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/grid_margin"
                android:layout_weight="1"
                android:text="/"
                android:textSize="@dimen/button_font_size" />

            <Button
                android:id="@+id/btnEq"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/grid_margin"
                android:layout_marginRight="@dimen/grid_margin"
                android:layout_weight="1"
                android:text="="
                android:textSize="@dimen/button_font_size" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

